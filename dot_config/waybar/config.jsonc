{
    "position": "top",
    "layer": "top",
    "height": 30,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "modules-left": ["wlr/workspaces", /*"wlr/taskbar",*/ "custom/current-player", "custom/playerlabel"],
    "modules-center": ["wlr/taskbar", "cpu", "memory"],
    "modules-right": ["tray", "hyprland/language", "network", "pulseaudio", "clock"],
    
// Modules configuration
	"clock": {
		"format": " {:%H:%M}",
		"tooltip": "true",
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format-alt": " {:%d/%m}"
	},

	"wlr/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
		"format": "{icon}",
		"on-click": "activate",
		"format-icons": {
			"1": "一",
			"2": "二",
			"3": "三",
			"4": "四",
			"5": "五",
			"6": "六",
			// "urgent": "",
			// "active": "",
			// "default": "󰧞",
    		"sort-by-number": true
		}
    },

	"wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16,
        "all-outputs": false,
		"active-first": false,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "wofi"
         ]
    },

