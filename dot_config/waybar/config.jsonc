	"pulseaudio": {
		"format": "{icon}  {volume}%",
		"tooltip": false,
		"format-muted": " Muted",
		"on-click": "bash ~/.config/dunst/scripts/volume mute &",
		"on-scroll-up": "bash ~/.config/dunst/scripts/volume up &",
		"on-scroll-down": "bash ~/.config/dunst/scripts/volume down &",
		"scroll-step": 5,
		"on-click-right": "pavucontrol",
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
